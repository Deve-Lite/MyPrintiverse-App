<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="MyPrintiverse.Templates.MessageEntry"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:module="clr-namespace:MyPrintiverse.Templates"
  x:DataType="module:MessageEntry">

    <StackLayout>
        <Entry Placeholder="{Binding Placeholder}"
               Text="{Binding Text}" />
        <Label IsVisible="{Binding MessageIsVisible}"
               Text="{Binding Message}"
               TextColor="{Binding MessageColor}" />
    </StackLayout>

</ContentView>
