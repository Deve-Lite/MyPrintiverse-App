<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPrintiverse.Templates.Headers.TertiaryHeader"
             xmlns:header="clr-namespace:MyPrintiverse.Templates.Headers"
             x:Name="this">

    <Grid BindingContext="{x:Reference this}" VerticalOptions="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.85*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>
        
        <header:PrimaryHeader Title="{Binding Title}"/>

        <ImageButton Grid.Column="1"
                     Source="{Binding Source}"
                     Command="{Binding Command}"/>
        
    </Grid>
</ContentView>
