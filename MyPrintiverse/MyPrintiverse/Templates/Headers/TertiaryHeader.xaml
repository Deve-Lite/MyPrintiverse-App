<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPrintiverse.Templates.Headers.TertiaryHeader"
             xmlns:header="clr-namespace:MyPrintiverse.Templates.Headers"
             x:Name="this">
    
    <Grid BindingContext="{x:Reference this}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <header:SecondaryHeader Title="{Binding Title}"
                                ImageSource="{Binding FirstImageSource}"
                                ImageCommand="{Binding FirstImageCommand}"
                                ImageSize="{Binding FirstImageSize}"/>

        <ImageButton Grid.Column="1"
                     Source="{Binding SecondImageSource}"
                     HeightRequest="{Binding SecondImageSize}"
                     WidthRequest="{Binding SecondImageSize}"
                     Command="{Binding SecondImageCommand}"
                     Margin="10,0,10,0"/>

    </Grid>
</ContentView>
