<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MyPrintiverse.Templates.Popups.DescriptionPopup"
               xmlns:headers="clr-namespace:MyPrintiverse.Templates.Headers"
               Color="#66000000"
               x:Name="this">

    <StackLayout BackgroundColor="Transparent">
        <Frame Style="{StaticResource BaseFrame}"
           BindingContext="{x:Reference this}"
           Margin="0">
            <StackLayout MinimumWidthRequest="200"
                     MaximumWidthRequest="350"
                     MinimumHeightRequest="100">
                <headers:SecondaryHeader Margin="10,10,10,0"
                                     ImageSource="close.png"
                                     x:Name="header" />

                <Label x:Name="description"
                   Margin="10"
                   Style="{StaticResource MediumRaleway}"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</toolkit:Popup>
