                                    <FormattedString>
                                        <Span Style="{StaticResource CollectionFrameBoldSpan}" Text="Avaliable: "/>
                                        <Span Style="{StaticResource CollectionFrameSpan}" Text="{Binding AvaliableWeight,StringFormat='{0:0.00} kg'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Grid.Column="1">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Style="{StaticResource CollectionFrameBoldSpan}" Text="Base: "/>
                                        <Span Style="{StaticResource CollectionFrameSpan}" Text="{Binding StandardWeight,StringFormat='{0:0.00} kg'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Grid.Row="1" Grid.ColumnSpan="2">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Style="{StaticResource CollectionFrameBoldSpan}" Text="Status: "/>
                                        <Span Style="{StaticResource CollectionFrameSpan}" Text="out of filament"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Grid.Row="2"
                                   Grid.ColumnSpan="2"
                                   Style="{StaticResource SmallRaleway}"
                                   Text="TODOTAG"/>

                            <Image Grid.RowSpan="4"
                                   Grid.Column="2"
                                   HeightRequest="60" 
                                   WidthRequest="60" 
                                   Source="emptyspool.png"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit" 
                                   Margin="5, 4, 0, 4"/>

                            <Label Style="{StaticResource MicroRaleway}"
                                   Grid.ColumnSpan="3"
                                   Grid.Row="3"
                                   HorizontalOptions="Start"
                                   Text="{Binding EditedAt,StringFormat='Used at {0:dd/MM/yy HH:mm}'}"/>

                        </Grid>
                    </Frame>
                </StackLayout>
            </DataTemplate>

