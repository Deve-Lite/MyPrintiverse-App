                                   Text="TODOTAG"/>

                            <Image Grid.RowSpan="4"
                                   Grid.Column="2"
                                   HeightRequest="60" 
                                   WidthRequest="60" 
                                   Source="fullspool.png"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit" 
                                   Margin="5, 4, 0, 4"/>

