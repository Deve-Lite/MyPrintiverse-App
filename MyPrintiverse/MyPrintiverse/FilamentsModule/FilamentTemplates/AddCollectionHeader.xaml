<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPrintiverse.FilamentsModule.FilamentTemplates.AddCollectionHeader"
             xmlns:filamentemplates="clr-namespace:MyPrintiverse.FilamentsModule.FilamentTemplates"
             x:Name="this">

    <Grid BindingContext="{x:Reference this}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.85*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>
        
        <filamentemplates:CollectionHeader Title="{Binding Title}" 
                                           TitleStyle="{Binding TitleStyle}"
                                           StackLayoutStyle="{Binding StackLayoutStyle}"/>

  

        <Image Source="{Binding AddSource}" Grid.Column="1" HeightRequest="{Binding Height}">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddCommand}" 
                                      CommandParameter="{Binding .}"/>
            </Image.GestureRecognizers>
        </Image>
        
    </Grid>
</ContentView>
