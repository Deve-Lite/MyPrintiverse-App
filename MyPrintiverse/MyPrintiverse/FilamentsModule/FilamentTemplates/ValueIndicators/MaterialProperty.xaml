<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPrintiverse.FilamentsModule.FilamentTemplates.ValueIndicators.MaterialProperty"
             x:Name="this">

    <ContentView.Resources>
        <ResourceDictionary>

            <Style TargetType="Frame" x:Key="PropertyFrame" BasedOn="{StaticResource BaseFrameVariant}">
                <Setter Property="Padding" Value="7,7,7,5"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    
    <VerticalStackLayout BindingContext="{x:Reference this}">

        <Frame Style="{StaticResource PropertyFrame}">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Command}"/>
            </Frame.GestureRecognizers>

            <StackLayout>
                <Image x:Name="image" MaximumHeightRequest="64" Source="spool.png"/>

                <Label Style="{StaticResource SmallRaleway}"
                       Margin="2,2,2,4"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Text="{Binding Title}"/>
            </StackLayout>
        </Frame>
        
    </VerticalStackLayout>
</ContentView>
